apiVersion: batch/v1
kind: Job
metadata:
  name: {{ job_name }}
  namespace: job-platform
spec:
  template:
    spec:
      containers:
      - name: {{ params.container_name }}
        image: {{ params.image }}
        command: [{{ params.command | join(', ') }}]
{% if params.env is defined and params.env %}
        env:
{% for key, value in params.env.items() %}
        - name: {{ key }}
          value: {{ value }}
{% endfor %}
{% endif %}
      restartPolicy: Never
  backoffLimit: 0
